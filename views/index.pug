extends layout

block content
  .container-fluid(style="margin-top:2%;")
    .jumbotron
      .bs-callout.bs-callout-ss
        p(style='padding-top:5px;font:14px;') Welcome to TripSit Factsheets.
        span(style='font:14px;') Click on drugs, categories. Mouseover technical terms. Send us 
          a(href='http://tripsit.me/contact-us') feedback
          span .
        br
        br
        span(style='font:14px;') 
          b New: 
          span Mobile-mode and night-mode!
          br
          br
          span Are you a harm reduction organisation using TripSit? 
          a(href='https://tripsit.me/harm-reduction-organisation-contact-form/' target="_blank") Let us know about you!
      .table
        table.table.table-striped.table_class.table-hover
          thead
            tr
              th.theader
                | Name
              th.theader
                | Categories
              th.theader
                | Summary
              th.theader
                | Alias
          tfoot
            tr
              th.theader
                | Name
              th.theader
                | Categories
              th.theader
                | Summary
              th.theader
                | Alias
          tbody.tbody1.table-hover
            each drug in drugs
              tr
                td.ttext.all
                  a.boxed2(href='/'+encodeURIComponent(drug.name)) 
                    | #{drug.pretty_name}
                td.min-tablet
                  if drug.categories 
                    each kw in drug.categories
                      if kw == 'psychedelic'
                        a.label.label-psychedelic(href='/category/'+kw style='padding:3px;margin:5px;') #{kw}
                      else if kw == 'benzodiazepine'
                        a.label.label-default(href='/category/'+kw style='background-color:#000;color:#FF0000;padding:3px;margin:5px;') benzo
                      else if kw == 'stimulant'
                        a.label.label-info(href='/category/'+kw style='padding:3px;margin:5px;') stimulant
                      else if kw == 'dissociative'
                        a.label.label-disso(href='/category/'+kw style='padding:3px;margin:5px;') dissociative
                      else if kw == 'opioid'
                        a.label.label-success(href='/category/'+kw style='padding:3px;margin:5px;') opioid
                      else if kw == 'depressant'
                        a.label.label-danger(href='/category/'+kw style='padding:3px;margin:5px;') depressant 
                      else if kw == 'habit-forming'
                        a.label.label-habit(href='/category/'+kw style='padding:3px;margin:5px;') habit forming
                      else if kw == 'research-chemical'
                        a.label.label-warning(href='/category/'+kw style='padding:3px;margin:5px;') research chemical
                      else if kw == 'tentative'
                        a.label.label-tentative(href='/category/'+kw style='padding:3px;margin:5px;') tentative
                      else if kw == 'empathogen'
                        a.label.label-empathogen(href='/category/'+kw style='padding:3px;margin:5px;') empathogen
                      else
                        a.label.label-default(href='/category/'+kw style='padding:3px;margin:5px;') #{kw}
                  else
                    span.label.label-default(href='/category/'+kw style='padding:3px;margin:5px;') other
                td.ttext.desktop
                  | !{drug.properties.summary}
                td.ttext.desktop
                  | !{drug.properties.aliases}
    p
    p
    b Factsheets on #{drugs.length} drugs
